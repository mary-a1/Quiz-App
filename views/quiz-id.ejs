<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz Light | Quiz</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
  href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@1,800&family=Roboto:wght@500;900&display=swap"
  rel="stylesheet">

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/quiz-id.css" />

  <!-- External Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>

  <!-- App Scripts -->
  <script defer src="/scripts/quiz-id.js"></script>
</head>

<body>
  <header>
    <%- include('./partials/header', {user}) %>
  </header>

  <main class="container">
    <section class="quiz-info">
      <img src="<%= quiz[0].thumbnail_url %>">
      <h3>
        <%= quiz[0].title %>
      </h3>
      <p>
        <%= quiz[0].type.charAt(0).toUpperCase() + quiz[0].type.slice(1) %>
      </p>
    </section>

    <section class="quiz-questions">
      <h3>Questions</h3>
      <div class="question-card">
        <% for (const exam of quiz) { %>
          <div class="q-card" id="<%= exam.question_id %>">
            <div class="questions" id="<%= exam.question_id %>_<%= exam.correct_answer %>">
              <%= exam.description %>
            </div>
            <div id="answer-buttons" class="btn-grid">
              <div>
                <input type="radio" name="question_<%= exam.question_id %>" id="answer_1_<%= exam.question_id %>"
                  value="1" />
                <label for="answer_1_<%= exam.question_id %>" class="btn">1. <%= exam.answer_one %>
                </label>
              </div>
              <div>
                <input type="radio" name="question_<%= exam.question_id %>" id="answer_2_<%= exam.question_id %>"
                  value="2" />
                <label for="answer_2_<%= exam.question_id %>" class="btn">2. <%= exam.answer_two %>
                </label>
              </div>
              <div>
                <input type="radio" name="question_<%= exam.question_id %>" id="answer_3_<%= exam.question_id %>"
                  value="3" />
                <label for="answer_3_<%= exam.question_id %>" class="btn">3. <%= exam.answer_three %>
                </label>
              </div>
              <div><input type="radio" name="question_<%= exam.question_id %>" id="answer_4_<%= exam.question_id %>"
                  value="4" /><label for="answer_4_<%= exam.question_id %>" class="btn">4. <%= exam.answer_four %>
                </label></div>
            </div>
          </div>
          <% } %>
      </div>

      <!-- Submit quiz -->
      <input type="text" name="quiz_info" class="hide" id="quiz_info">
      <button id="submit-btn" class="submit-btn" type="button">Submit</button>

      <!-- Add rating -->
      <div id="popup" class="hide">
        <div id="popup-container">
          <button id="close-btn" type="button">&times;</button>
          <h1>Your Score: <span id="score"></span></h1>
          <div>Please give the quiz a rating!</div>
          <div class="wrapper">
            <div class="rating">
              <span class="star" name="1">&#9733;</span>
              <span class="star" name="2">&#9733;</span>
              <span class="star" name="3">&#9733;</span>
              <span class="star" name="4">&#9733;</span>
            </div>
          </div>
          <div class="share-link">
            <i class="fa-solid fa-share-from-square"></i>
            <button class="social-media"
              onclick="window.open('mailto:?subject=Quiz Light | &body=Check out this new Quiz Light App!%>')">
              Email</button>
            <button class="social-media"
              onclick="window.open('whatsapp://send?text=Check out this new Quiz Light App!')">
              Whatsapp</button>
            <button class="social-media"
              onclick="window.open('https://twitter.com/share?url=&text=Check out this new Quiz Light App! &hashtags=QuizLight')">
              Twitter</button>
            <button class="social-media"
              onclick="window.open('sms:?&body=Check out this new Quiz Light App!')">Text</button>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>

</html>
