<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz Light | Create Quiz</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/create-quiz.css" />

  <!-- External Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>

  <!-- App Scripts -->
  <script defer src="/scripts/create-quiz.js"></script>
</head>

<body>
  <!-- Nav Bar -->
  <%- include('partials/header') %>

    <!-- Header -->
    <h1>Create Quiz</h1>

    <!-- Create Quiz Form -->
    <form>
      <!-- Initial Info -->
      <fieldset>
        <div>
          <label for="title">Title:</label><br>
          <input type="text" id="title" name="title"><br>
        </div>
        <div>
          <label for="subject">Subject:</label><br>
          <input type="text" id="subject" name="subject"><br>
        </div>
        <div>
          <label for="thumbnail_url">Cover Photo URL:</label><br>
          <input type="text" id="thumbnail_url" name="thumbnail_url"><br>
        </div>
        <div>
          <label for="public">Public? Y/N:</label><br>
          <input type="text" id="public" name="public"><br>
        </div>
      </fieldset>

      <!-- Question 1 -->
      <fieldset class="q1">
        <div>
          <label for="q1">Question 1:</label><br>
          <input type="text" id="q1" name="q1"><br>
        </div>
        <div>
          <label for="q1a">A:</label><br>
          <input type="text" id="q1a" name="q1a"><br>
        </div>
        <div>
          <label for="q1b">B:</label><br>
          <input type="text" id="q1b" name="q1b"><br>
        </div>
        <div>
          <label for="q1c">C:</label><br>
          <input type="text" id="q1c" name="q1c"><br>
        </div>
        <div>
          <label for="q1d">D:</label><br>
          <input type="text" id="q1d" name="q1d"><br>
        </div>
        <div>
          <label for="q1-corr-ans">Correct Answer:</label><br>
          <input type="text" id="q1-corr-ans" name="q1-corr-ans"><br>
        </div>
      </fieldset>

      <!-- Question 2 -->
      <fieldset class="q2">
        <div>
          <label for="q2">Question 2:</label><br>
          <input type="text" id="q2" name="q2"><br>
        </div>
        <div>
          <label for="q2a">A:</label><br>
          <input type="text" id="q2a" name="q2a"><br>
        </div>
        <div>
          <label for="q2b">B:</label><br>
          <input type="text" id="q2b" name="q2b"><br>
        </div>
        <div>
          <label for="q2c">C:</label><br>
          <input type="text" id="q2c" name="q2c"><br>
        </div>
        <div>
          <label for="q2d">D:</label><br>
          <input type="text" id="q2d" name="q2d"><br>
        </div>
        <div>
          <label for="q2-corr-ans">Correct Answer:</label><br>
          <input type="text" id="q2-corr-ans" name="q2-corr-ans"><br>
        </div>
      </fieldset>

      <!-- Question 3 -->
      <fieldset class="q3">
        <div>
          <label for="q3">Question 3:</label><br>
          <input type="text" id="q3" name="q3"><br>
        </div>
        <div>
          <label for="q3a">A:</label><br>
          <input type="text" id="q3a" name="q3a"><br>
        </div>
        <div>
          <label for="q3b">B:</label><br>
          <input type="text" id="q3b" name="q3b"><br>
        </div>
        <div>
          <label for="q3c">C:</label><br>
          <input type="text" id="q3c" name="q3c"><br>
        </div>
        <div>
          <label for="q3d">D:</label><br>
          <input type="text" id="q3d" name="q3d"><br>
        </div>
        <div>
          <label for="q3-corr-ans">Correct Answer:</label><br>
          <input type="text" id="q3-corr-ans" name="q3-corr-ans"><br>
        </div>
      </fieldset>

      <!-- Question 4 -->
      <fieldset class="q4">
        <div>
          <label for="q4">Question 4:</label><br>
          <input type="text" id="q4" name="q4"><br>
        </div>
        <div>
          <label for="q4a">A:</label><br>
          <input type="text" id="q4a" name="q4a"><br>
        </div>
        <div>
          <label for="q4b">B:</label><br>
          <input type="text" id="q4b" name="q4b"><br>
        </div>
        <div>
          <label for="q4c">C:</label><br>
          <input type="text" id="q4c" name="q4c"><br>
        </div>
        <div>
          <label for="q4d">D:</label><br>
          <input type="text" id="q4d" name="q4d"><br>
        </div>
        <div>
          <label for="q4-corr-ans">Correct Answer:</label><br>
          <input type="text" id="q4-corr-ans" name="q4-corr-ans"><br>
        </div>
      </fieldset>

      <!-- Submit/Canel Quiz -->
      <div class="all-buttons">
        <input type="submit" value="Submit">
        <button class="add-question">Add Question</button>
        <button class="rem-question">Remove Question</button>
        <a href="/">Cancel</a>
      </div>
    </form>
</body>

</html>
