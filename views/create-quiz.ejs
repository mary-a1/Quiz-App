              <option value="option-D">D</option>
            </select>
          </div>
        </fieldset>

        <!-- Submit/Canel Quiz -->
        <div class="all-buttons">
          <input type="submit" value="Submit">
          <button class="add-question">Add Question</button>
          <button class="rem-question">Remove Question</button>
          <a href="/">Cancel</a>
        </div>
      </form>
    </main>
    </body>

    </html>
