<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz Light | Create Quiz</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/create-quiz.css" />
  <link rel="stylesheet" href="/styles/header.css" />


  <!-- External Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>

  <!-- App Scripts -->
  <script defer src="/scripts/create-quiz.js"></script>
</head>

<body>
  <!-- Nav Bar -->
  <%- include('partials/header') %>

    <!-- Header -->
    <main class="container">
        <h1>Create Quiz</h1>
      <!-- Create Quiz Form -->
      <form class="form-inline" method="POST" action="/new">
        <!-- Initial Info -->
      <fieldset class="init-vals">
        <!-- <section class="initial"> -->
          <div class="title">
            <label for="title">Title:</label><br>
            <input type="text" id="title" name="title" required><br>
          </div>
          <div class="subject">
            <label for="subject">Subject:</label><br>
            <select name="subject" id="subject">
              <option value="education">Educational</option>
              <option value="survey">Survey</option>
              <option value="trivia">Trivia</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="thumbnail">
            <label for="thumbnail_url">Cover Photo URL:</label><br>
            <input type="text" id="thumbnail_url" name="thumbnail_url" required><br>
          </div>
          <div class="public">
            <label for="public">Public? Y/N:</label><br>
            <select name="public" id="public">
              <option value="public">Yes</option>
              <option value="private">No</option>
            </select>
          </div>
        <!-- </section> -->
      </fieldset>

        <!-- Question 1 -->
        <fieldset class="questions">
          <div>
            <label for="q1">Question 1:</label><br>
            <textarea type="text" id="q1" name="q1" required></textarea>
          </div>
          <div>
            <label for="q1a">A:</label><br>
            <textarea type="text" id="q1a" name="q1a" required></textarea>
          </div>
          <div>
            <label for="q1b">B:</label><br>
            <textarea type="text" id="q1b" name="q1b" required></textarea>
          </div>
          <div>
            <label for="q1c">C:</label><br>
            <textarea type="text" id="q1c" name="q1c" required></textarea>
          </div>
          <div>
            <label for="q1d">D:</label><br>
            <textarea type="text" id="q1d" name="q1d" required></textarea>
          </div>
          <div>
            <label for="q1-corr-ans">Correct Answer:</label><br>
            <select name="question-one" id="question-one">
              <option value="option-A">A</option>
              <option value="option-B">B</option>
              <option value="option-C">C</option>
              <option value="option-D">D</option>
            </select>
          </div>
        </fieldset>

        <!-- Question 2 -->
        <fieldset class="questions">
          <div>
            <label for="q2">Question 2:</label><br>
