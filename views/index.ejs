<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Google Fonts -->
  <link
  href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@1,800&family=Roboto:wght@500;900&display=swap"
  rel="stylesheet">

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/index.css" />
  <link rel="stylesheet" href="/styles/header.css" />


  <!-- External Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>
</head>

<body>
  <!-- Nav Bar -->
  <header>
    <%- include('./partials/header', {user}) %>
  </header>

  <main>
  <!-- Quizzes -->
  <% for (let id in quizzes) { %>
    <div class="container">
      <!-- <p id="quizId">
        <%= quizzes[id].id %>
      </p><br /> -->
      <img class="thumbnail-image" src= <%= quizzes[id].thumbnail_url %>><br />
      <h1><%= quizzes[id].title %></h1><br />
        <h3>Rating: <%= Number(quizzes[id].average_rating).toFixed(0) %>/4</h3><br />
          <div class="share-link">
          <i class="fa-solid fa-share-from-square"></i>
          <button class="social-media" onclick="window.location.href = 'https://facebook.com/sharer/sharer.php?u=http://localhost:8080/quiz/<%= quizzes[id].id %>';"> Facebook</button>
          <button class="social-media" onclick="window.location.href = 'mailto:{to}?subject=Quiz&body=http://localhost:8080/quiz/<%= quizzes[id].id %>';"> Email</button>
          <button class="social-media" onclick="window.location.href = 'whatsapp://send?text=http://localhost:8080/quiz/<%= quizzes[id].id %>%20{Check out this quiz on Quiz Light}';"> Whatsapp</button>
          <button class="social-media" onclick="window.location.href = 'https://twitter.com/share?url=http://localhost:8080/quiz/<%= quizzes[id].id %>&text=Check out this quiz&hashtags=QuizLight';"> Twitter</button>
          </div>
          <form class="start-quiz" action="/<%= quizzes[id].id %>" method="POST">
              <button class="start-quiz">Start Quiz!</button>
          </form>
    </div>
    <% } %>
  </main>
</body>

</html>
